/* pages/details/details.wxss */

page{
  background: #DEDEDE;
  display: flex;
  width: 100%;
}

.main{
  background: #DEDEDE;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.baseMsg,.content, .more{
  margin:20rpx 20rpx 0rpx 20rpx;
  background: #FFFFFF;
  padding: 30rpx;
  display: flex;
  flex-direction: column;

  border-bottom-right-radius: 5px;
  border-top-right-radius: 5px;
  border-bottom-left-radius: 5px;
  border-top-left-radius: 5px;
}

.nameMsg, .jobNoMsg, .departmentMsg, .malfunctionMsg, 
.genderMsg, .describe, .reqDate{
  display: flex;
  flex-direction: row;
  width: 100%;
}
.baseMsgTitle, .contentTitle, .moreTitle, .dialogTitle{
  color: #797979;
  font-size: 25rpx;
  display: flex;
  justify-content: center; 

}
.annex{
  box-sizing: border-box;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  flex-wrap:wrap;
}
.imgbox{
  flex: 0 0 33.3333%;
  position: relative;
  box-sizing: border-box;
  padding: 10rpx;
}
.img{
    width:100%;
    margin-bottom: 10rpx;
    height: 208rpx;
}

.dialogs{
  background: #DEDEDE;
  height: 600rpx;
  border-bottom-right-radius: 5px;
  border-top-right-radius: 5px;
  border-bottom-left-radius: 5px;
  border-top-left-radius: 5px;
}

.dialog{
  margin: 20rpx 20rpx 0rpx 20rpx;
  padding: 10rpx;
  border-bottom-right-radius: 5px;
  border-top-right-radius: 5px;
  border-bottom-left-radius: 5px;
  border-top-left-radius: 5px;
  background-color: #FFFFFF;
}

.myBtn{
  background-color: #ce0a0a;
  border-radius: 0px;
  border-bottom-right-radius: 5px;
  border-top-right-radius: 5px;
  color: #FFFFFF;
  font-size: 13px;
  width: 20%;
  font-family: "微软雅黑";
}

.leaveMsg{
  display:flex; 
  flex-direction:row;
  margin-top: 20rpx;
}

.area{
  border: lightgrey;
  border-style: solid;
  border-width: 1px;
  font-size: 14px;
  border-bottom-left-radius: 5px;
  border-top-left-radius: 5px;
  height: 31px;
  padding-left: 10px;
  width: 80%;
  line-height: 31px;
}

.dateAndName{
  display:flex;
  flex-direction:row;
  position: relative;
}

.date{
  position: absolute;
	right: 0;
}

.sv{
  height: 100%;
}

.problem{
  display:flex;
  height: 100%;                       
  justify-content: center;
  align-items:center;
  flex-direction:column;
}

.problemImg{
  width: 200rpx;
  height: 200rpx;
}

.font{
  width: 200rpx;
  color:#ce0a0a;
  display:flex;
  justify-content: center;
}



