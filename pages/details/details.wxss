/* pages/details/details.wxss */

page{
  background: #DEDEDE;
  display: flex;
  width: 100%;
}

.main{
  background: #DEDEDE;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.baseMsg,.content, .more{
  margin:20rpx 20rpx 0rpx 20rpx;
  background: #FFFFFF;
  padding: 30rpx;
  display: flex;
  flex-direction: column;

  border-bottom-right-radius: 5px;
  border-top-right-radius: 5px;
  border-bottom-left-radius: 5px;
  border-top-left-radius: 5px;
}

.nameMsg, .jobNoMsg, .departmentMsg, .malfunctionMsg, 
.genderMsg, .describe, .reqDate{
  display: flex;
  flex-direction: row;
  width: 100%;
}
.baseMsgTitle, .contentTitle, .moreTitle, .dialogTitle{
  color: #797979;
  font-size: 25rpx;
  display: flex;
  justify-content: center; 

}
.annex{
  box-sizing: border-box;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  flex-wrap:wrap;
}
.imgbox{
  flex: 0 0 33.3333%;
  position: relative;
  box-sizing: border-box;
  padding: 10rpx;
}
.img{
    width:100%;
    margin-bottom: 10rpx;
    height: 208rpx;
}

.dialogs{
  background: #DEDEDE;
  height: 600rpx;
  border-bottom-right-radius: 5px;
  border-top-right-radius: 5px;
  border-bottom-left-radius: 5px;
  border-top-left-radius: 5px;
}

.dialog{
  margin: 20rpx 20rpx 0rpx 20rpx;
  padding: 10rpx;
  border-radius: 0px;
  border-bottom-right-radius: 5px;
  border-top-right-radius: 5px;
  border-bottom-left-radius: 5px;
  border-top-left-radius: 5px;
  background-color: #FFFFFF;
}

.myBtn{
  width: fit-content;
  background-color: #ce0a0a;
  border-radius: 0px;
  border-bottom-right-radius: 5px;
  border-top-right-radius: 5px;
  color: #FFFFFF
}

